<div class="container">
  <div class="row pt-0" id="user">
    <div class="col-lg-6 landing-center text-center d-flex align-items-center">
      <div>
        <div class="form-login box">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, :html => {:multipart => true}) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group">
              <%= f.email_field :email, autofocus: true, required: true, placeholder: "Email", class: "form-control"%>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="form-group">
              <i>(Leave Blank for no change)</i><br />
              <%= f.password_field :password, placeholder: "New Password", class: "form-control" %>

            </div>

            <div class="form-group">
              <%= f.password_field :password_confirmation, placeholder: "New Confirmation-Password", class: "form-control"%>
            </div>

            <div class="form-group">
              <i>(Need current password to confirm changes)</i><br />
              <%= f.password_field :current_password, placeholder: "Current Password required", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.file_field :image, placeholder: "Profile photo", class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.text_field :bio, placeholder: "Add your Bio", class: "form-control" %>
            </div>
            <div class="form-group">
            <%= f.label :account%><br>
            <%= f.radio_button :account, 'Public' %> Public<br />
            <%= f.radio_button :account, 'Private' %> Private<br />
            </div>

            <div class="actions">
              <%= f.submit "Update", class: "btn btn-primary" %>
          </div>
          <% end %>
          </div>
          <div class="links box">
            <h7>Cancel my account</h7>

              <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-primary" %>
              <%= link_to "Back", :back, class:"nav-link"%>
      </div>
    <div>
  </div>
</div>




